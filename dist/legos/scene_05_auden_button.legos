title: "The Glitch (Critique): The Auden Button"
description: "P3 Low-priority artistic intervention that toggles the experience from Homeric Simulation to Modernist Critique via data drift"
location: "critique_chamber"

entities:
  - id: "e_homeric_simulation"
    type: "mode"
    name: "Homeric Simulation (Order/Gold)"
    traits: ["heroic", "bronze-age", "authentic"]
    location: "default_state"
  - id: "e_modernist_critique"
    type: "mode"
    name: "Modernist Critique (Chaos/Glitch)"
    traits: ["ironic", "industrial", "dissonant"]
    location: "alternate_state"
  - id: "e_auden_button"
    type: "ui_element"
    name: "Auden Button Toggle"
    traits: ["interactive", "toggle", "switch"]
    location: "ui_panel"
  - id: "e_heroic_sounds"
    type: "audio"
    name: "Heroic Sounds & Bronze Textures"
    traits: ["lyre", "hymns", "warm"]
    location: "audio_layer"
  - id: "e_ironic_verse"
    type: "audio"
    name: "Auden's Ironic Verse & Industrial Tones"
    traits: ["cold", "mechanical", "dissonant"]
    location: "audio_layer"
  - id: "e_bronze_visuals"
    type: "visual"
    name: "Bronze Textures & Warm Lighting"
    traits: ["gold", "patina", "authentic"]
    location: "visual_layer"
  - id: "e_industrial_visuals"
    type: "visual"
    name: "Bleak Industrial Grays"
    traits: ["concrete", "barbed-wire", "modern"]
    location: "visual_layer"

goals:
  - id: "g_provide_critique"
    name: "Provide artistic commentary on data drift"
    owner: "e_auden_button"
  - id: "g_contrast_eras"
    name: "Contrast Homeric ideal with modern disillusionment"
    owner: "e_auden_button"
  - id: "g_user_agency"
    name: "Give user control over experiential mode"
    owner: "e_auden_button"

obstacles:
  - id: "o_accidental_glitch"
    name: "Users might trigger glitch unintentionally"
    affects: "g_user_agency"
  - id: "o_jarring_transition"
    name: "Mode switch might be too abrupt"
    affects: "g_contrast_eras"

shifts:
  - id: "s_press_button"
    name: "User presses Auden Button"
    causes: []
    results_in: "g_user_agency"
  - id: "s_swap_mode"
    name: "Conceptual swap from Homer to Modernism"
    causes: ["o_jarring_transition"]
    results_in: "g_contrast_eras"
  - id: "s_experience_drift"
    name: "User experiences data drift firsthand"
    causes: []
    results_in: "g_provide_critique"

relations:
  - "[toggles] e_auden_button -> e_homeric_simulation"
  - "[toggles] e_auden_button -> e_modernist_critique"
  - "[plays] e_homeric_simulation -> e_heroic_sounds"
  - "[plays] e_modernist_critique -> e_ironic_verse"
  - "[displays] e_homeric_simulation -> e_bronze_visuals"
  - "[displays] e_modernist_critique -> e_industrial_visuals"

timeline:
  - id: "t_auden"
    description: "Auden Button Experience"
    scenes:
      - id: "sc_default"
        description: "Default: Homeric Simulation active"
        entities: ["e_homeric_simulation", "e_heroic_sounds", "e_bronze_visuals"]
      - id: "sc_toggle"
        description: "User toggles Auden Button"
        entities: ["e_auden_button"]
      - id: "sc_glitch"
        description: "Glitch: Modernist Critique active"
        entities: ["e_modernist_critique", "e_ironic_verse", "e_industrial_visuals"]
      - id: "sc_return"
        description: "User can toggle back to Homeric"
        entities: ["e_auden_button", "e_homeric_simulation"]

